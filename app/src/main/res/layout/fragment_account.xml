<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.mainfragments.AccountFragment">


    <TextView
        android:id="@+id/settings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alegreya"
        android:text="ԱՆՁՆԱԿԱՆ ԷՋ"
        android:textColor="#C5821F"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="13dp"
        android:paddingStart="15dp"
        android:text="Անուն Ազգանուն"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#75000000"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:id="@+id/mail_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="13dp"
        android:paddingStart="15dp"
        android:text="aasdsd@mail.ru"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#75000000"
        app:layout_constraintTop_toBottomOf="@+id/mail_tv" />

    <TextView
        android:id="@+id/sex_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="13dp"
        android:paddingStart="15dp"
        android:text="իգական"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_tv"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#75000000"
        app:layout_constraintTop_toBottomOf="@+id/sex_tv" />

    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="13dp"
        android:paddingStart="15dp"
        android:text="0945456465"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_tv"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#75000000"
        app:layout_constraintTop_toBottomOf="@+id/mobile_tv" />


    <TextView
        android:id="@+id/blood_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="13dp"
        android:paddingStart="15dp"
        android:text="1 դրական"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_tv"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#75000000"
        app:layout_constraintTop_toBottomOf="@+id/blood_tv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_password_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alegreya"
        android:paddingVertical="3dp"
        android:paddingStart="15dp"
        android:text="փոխել գաղտնաբառը"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="#6AD1CFCF"
        app:cornerRadius="1000dp"
        app:strokeColor="#AEACAC"
        app:strokeWidth="1dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blood_tv"
        app:layout_constraintWidth_percent="0.95" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#4AACFA"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:text="ԴՈՒՐՍ ԳԱԼ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>